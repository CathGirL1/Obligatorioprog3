@model obligatorioProg3.Models.noticia

@{
    ViewBag.Title = "Delete";
}

@section Styles{

    <style>
        html, body {
            height: 100%;
            margin: 0;
            background: linear-gradient(to bottom, #050519, #0b0c28, #0f113d, #191970);
            color: aqua;
        }

        .card-body {
            border-color: darkblue;
            background-color: midnightblue;
            box-shadow: 0 0 25px 10px rgba(0, 0, 0, 0.6); /* efecto sombra para los contornos de la cardd */
            border-radius: 10px;
        }

        .tabla-personalizada {
            background-color: darkblue;
            color: aqua;
            border: 2px solid aqua;
        }

        .tabla-personalizada th {
            border: 1px solid aqua;
        }

        .tabla-personalizada td {
            border: 1px solid aqua;
        }

        .tabla-personalizada th {
            background-color: darkblue;
        }

        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch; /* para scroll (desplazar) suave en móviles */
        }
        .btn-default {
            color: mediumaquamarine;
            background-color: blue;
            min-width: 150px;
            text-align: center;
        }

        .btn-default :hover{
            color: royalblue; 
        }
    </style>


}

<body>
    <h3>¿Enserio quieres eliminar esta noticia?</h3>
    <div class="container mt-5">
        <div class="card-body">
            <h4 class="text-center">Eliminación de noticia</h4>
            <hr />
            <div class="table-responsive">
                <table class="table tabla-personalizada">
                    <thead>
                        <tr>
                            <th scope="col">Campos</th>
                            <th scope="col">Valores</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>Titulo</th>
                            <td>@Html.DisplayFor(model => model.titulo)</td>
                        </tr>
                        <tr>
                            <th>Contenido</th>
                            <td>@Html.DisplayFor(model => model.contenido)</td>
                        </tr>
                        <tr>
                            <th>Fecha de publicacion</th>
                            <td>@Model.fechaPublicacion.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Imagen</th>
                            <td>@Html.DisplayFor(model => model.imagen)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            @using (Html.BeginForm())
             {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="form-group mb-3 text-center">
                        <input type="submit" value="Eliminar" class="btn btn-default" />
                    </div>
                </div>

                <div class="mt-3">
                    @Html.ActionLink("← Volver a la lista", "Index", null, new { @class = "btn btn-outline-info" })
                </div>
             }

        </div>
        
    </div>

</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}
